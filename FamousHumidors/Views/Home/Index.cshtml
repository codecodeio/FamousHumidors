@model FamousHumidors.ViewModels.HomeViewModel

{

}
@{
    ViewBag.Title = "Famous Humidors";
}


<!-- Slider -->

<div class="main_slider" style="background-image:url(images/humidor.jpg)">
    <div class="container fill_height">
        <div class="row align-items-center fill_height">
            <div class="col">
                <div class="main_slider_content">
                    <h6>Spring / Summer 2018</h6>
                    <h1>Get up to 30% Off New Humidors</h1>
                    <div class="red_button shop_now_button"><a href="#">shop now</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Banner -->

<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="banner_item align-items-center" style="background-image:url(images/travelHumidor.jpg)">
                    <div class="banner_category">
                        <a href="categories.html">Humidors</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="banner_item align-items-center" style="background-image:url(images/hygrometer.jpg)">
                    <div class="banner_category">
                        <a href="categories.html">Hygrometers</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="banner_item align-items-center" style="background-image:url(images/lighter.jpg)">
                    <div class="banner_category">
                        <a href="categories.html">Lighters</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- New Arrivals -->

<div class="new_arrivals">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title new_arrivals_title">
                    <h2>New Arrivals</h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col text-center">
                <div class="new_arrivals_sorting">
                    <ul class="arrivals_grid_sorting clearfix button-group filters-button-group">
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter="*">all</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center" data-filter=".Humidors">Humidors</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center" data-filter=".Hygrometers">Hygrometers</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center" data-filter=".Lighters">Lighters</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>

                    @foreach (var item in Model.NewArrivals)
                    {
                        <div class="product-item @Html.DisplayFor(modelItem => item.Category)">
                            <div class="product discount product_filter">
                                <div class="product_image">
                                    <img src="https://www.famous-smoke.com/@Html.DisplayFor(modelItem => item.Image)" alt="">
                                </div>
                                <div class="favorite favorite_left"></div>
                                @if (item.PriceMsrp >= item.Price + 1)
                                {
                                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                                        <span>-$@String.Format("{0:N0}", item.PriceMsrp - item.Price)</span>
                                    </div>
                                }
                                <div class="product_info">
                                    <h6 class="product_name"><a href=" @Html.DisplayFor(modelItem => item.Url)"> @Html.DisplayFor(modelItem => item.Name)</a></h6>
                                    <div class="product_price">
                                        $@Html.DisplayFor(modelItem => item.Price)
                                        @if (item.PriceMsrp >= item.Price + 1)
                                        {
                                            <span>$@Html.DisplayFor(modelItem => item.PriceMsrp)</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="red_button add_to_cart_button"><a href="/cart?id=@Html.DisplayFor(modelItem => item.Id)">add to cart</a></div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Deal of the week -->

<div class="deal_ofthe_week">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="deal_ofthe_week_img">
                    <img src="images/deal_ofthe_week.png" alt="">
                </div>
            </div>
            <div class="col-lg-6 text-right deal_ofthe_week_col">
                <div class="deal_ofthe_week_content d-flex flex-column align-items-center float-right">
                    <div class="section_title">
                        <h2>Deal Of The Week</h2>
                    </div>
                    <ul class="timer">
                        <li class="d-inline-flex flex-column justify-content-center align-items-center">
                            <div id="day" class="timer_num">03</div>
                            <div class="timer_unit">Day</div>
                        </li>
                        <li class="d-inline-flex flex-column justify-content-center align-items-center">
                            <div id="hour" class="timer_num">15</div>
                            <div class="timer_unit">Hours</div>
                        </li>
                        <li class="d-inline-flex flex-column justify-content-center align-items-center">
                            <div id="minute" class="timer_num">45</div>
                            <div class="timer_unit">Mins</div>
                        </li>
                        <li class="d-inline-flex flex-column justify-content-center align-items-center">
                            <div id="second" class="timer_num">23</div>
                            <div class="timer_unit">Sec</div>
                        </li>
                    </ul>
                    <div class="red_button deal_ofthe_week_button"><a href="#">shop now</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Best Sellers -->

<div class="best_sellers">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title new_arrivals_title">
                    <h2>Best Sellers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="product_slider_container">
                    <div class="owl-carousel owl-theme product_slider">

                        @foreach (var item in Model.BestSellers)
                        {
                            <div class="owl-item product_slider_item">
                                <div class="product-item">
                                    <div class="product discount">
                                        <div class="product_image">
                                            <img src="https://www.famous-smoke.com/@Html.DisplayFor(modelItem => item.Image)" alt="">
                                        </div>
                                        <div class="favorite favorite_left"></div>
                                        @*<div class="product_bubble product_bubble_left product_bubble_green d-flex flex-column align-items-center"><span>new</span></div>*@
                                        @if (item.PriceMsrp >= item.Price + 1)
                                        {
                                            <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                                                <span>-$@String.Format("{0:N0}", item.PriceMsrp - item.Price)</span>
                                            </div>
                                        }
                                        <div class="product_info">
                                            <h6 class="product_name"><a href="@Html.DisplayFor(modelItem => item.Url)"> @Html.DisplayFor(modelItem => item.Name)</a></h6>
                                            <div class="product_price">$@Html.DisplayFor(modelItem => item.Price)<span>$@Html.DisplayFor(modelItem => item.PriceMsrp)</span></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>

                    <!-- Slider Navigation -->

                    <div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
                        <i class="fa fa-chevron-left" aria-hidden="true"></i>
                    </div>
                    <div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
                        <i class="fa fa-chevron-right" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Benefit -->
@Html.Partial("_Benefit")

