<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"><a href="index.html"><i class="fa fa-angle-right" aria-hidden="true"></i>Search</a></li>
                </ul>
            </div>

            <!-- Sidebar -->

            <div class="sidebar">
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Category</h5>
                    </div>
                    <ul class="sidebar_categories">
                        <li><a href="#">Men</a></li>
                        <li class="active"><a href="#"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Women</a></li>
                        <li><a href="#">Accessories</a></li>
                        <li><a href="#">New Arrivals</a></li>
                        <li><a href="#">Collection</a></li>
                        <li><a href="#">Shop</a></li>
                    </ul>
                </div>

                <!-- Price Range Filtering -->
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Filter by Price</h5>
                    </div>
                    <p>
                        <input type="text" id="amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
                    </p>
                    <div id="slider-range"></div>
                    <div class="filter_button"><span>filter</span></div>
                </div>

                <!-- Sizes -->
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Sizes</h5>
                    </div>
                    <ul class="checkboxes">
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>S</span></li>
                        <li class="active"><i class="fa fa-square" aria-hidden="true"></i><span>M</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>L</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>XL</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>XXL</span></li>
                    </ul>
                </div>

                <!-- Color -->
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Color</h5>
                    </div>
                    <ul class="checkboxes">
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>Black</span></li>
                        <li class="active"><i class="fa fa-square" aria-hidden="true"></i><span>Pink</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>White</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>Blue</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>Orange</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>White</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>Blue</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>Orange</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>White</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>Blue</span></li>
                        <li><i class="fa fa-square-o" aria-hidden="true"></i><span>Orange</span></li>
                    </ul>
                    <div class="show_more">
                        <span><span>+</span>Show More</span>
                    </div>
                </div>

            </div>

            <!-- Main Content -->

            <div class="main_content">

                <!-- Products -->

                <div class="products_iso">
                    <div class="row">
                        <div class="col">

                            <!-- Product Sorting -->

                            <div class="product_sorting_container product_sorting_container_top">
                                <ul class="product_sorting">
                                    @*<li>
                                        <span class="type_sorting_text">Default Sorting</span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_type">
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "original-order" }'><span>Default Sorting</span></li>
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "price" }'><span>Price</span></li>
                                            <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "name" }'><span>Product Name</span></li>
                                        </ul>
                                    </li>*@
                                    <li>
                                        <span>Sort By</span>
                                        <span class="num_sorting_text">@Html.DisplayFor(modelItem => Model.SortTitle) 
                                            @if(Model.Sort == "priceDesc" || Model.Sort == "NameDesc")
                                            {
                                                <i class="fa fa-arrow-down" style="float:none;" aria-hidden="true"></i> 
                                            }
                                            else if(Model.Sort == "priceAsc" || Model.Sort == "NameAsc")
                                            {
                                                <i class="fa fa-arrow-up" style="float:none;" aria-hidden="true"></i> 
                                            }

                                        </span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_num">
                                            <li class="num_sorting_btn"><a href="/search?sort=best&page=@Model.Page&resultsPerPage=@Model.ResultsPerPage"><span>Best</span></a></li>
                                            <li class="num_sorting_btn"><a href="/search?sort=priceDesc&page=@Model.Page&resultsPerPage=@Model.ResultsPerPage"><span>Price: <i class="fa fa-arrow-down" style="float:none;" aria-hidden="true"></i></span></a></li>
                                            <li class="num_sorting_btn"><a href="/search?sort=priceAsc&page=@Model.Page&resultsPerPage=@Model.ResultsPerPage"><span>Price: <i class="fa fa-arrow-up" style="float:none;" aria-hidden="true"></i></span></a></li>
                                            <li class="num_sorting_btn"><a href="/search?sort=nameAsc&page=@Model.Page&resultsPerPage=@Model.ResultsPerPage"><span>Name: <i class="fa fa-arrow-down" style="float:none;" aria-hidden="true"></i></span></a></li>
                                            <li class="num_sorting_btn"><a href="/search?sort=nameDesc&page=@Model.Page&resultsPerPage=@Model.ResultsPerPage"><span>Name: <i class="fa fa-arrow-up" style="float:none;" aria-hidden="true"></i></span></a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <span>Show</span>
                                        <span class="num_sorting_text">@Html.DisplayFor(modelItem => Model.ResultsPerPage)</span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_num">
                                            <li class="num_sorting_btn"><a href="/search?resultsPerPage=8&page=@Model.Page&sort=@Model.Sort"><span>8</span></a></li>
                                            <li class="num_sorting_btn"><a href="/search?resultsPerPage=16&page=@Model.Page&sort=@Model.Sort"><span>16</span></a></li>
                                            <li class="num_sorting_btn"><a href="/search?resultsPerPage=24&page=@Model.Page&sort=@Model.Sort"><span>24</span></a></li>
                                        </ul>
                                    </li>
                                </ul>
                               
                                <div class="pages d-flex flex-row align-items-center">
                                    @if(Model.Page > 1)
                                    {
                                        <div id="next_page" class="page_next"><a href="@Html.DisplayFor(modelItem => Model.PrevPageUrl)"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a></div>

                                    }
                                    
                                    <div class="page_current">
                                        <span>@Html.DisplayFor(modelItem => Model.Page)</span>
                                       
                                        <ul class="page_selection">
                                            @if (Model.NextPage != Model.LastPage)
                                            {
                                                <li><a href="@Html.DisplayFor(modelItem => Model.NextPageUrl)">@Html.DisplayFor(modelItem => Model.NextPage)</a></li>
                                                <li><a href="#">...</a></li>
                                            }
                                             
                                            @if(Model.MidPage != Model.NextPage && Model.Page != Model.LastPage && Model.MidPage != Model.Page)
                                            {
                                                <li><a href="@Html.DisplayFor(modelItem => Model.MidPageUrl)">@Html.DisplayFor(modelItem => Model.MidPage)</a></li>
                                                <li><a href="#">...</a></li>
                                            }
                                            <li><a href="@Html.DisplayFor(modelItem => Model.LastPageUrl)">@Html.DisplayFor(modelItem => Model.LastPage)</a></li>
                                            
                                        </ul>
                                    </div>
                                    <div class="page_total"><span>of</span>@Html.DisplayFor(modelItem => Model.NumberOfPages)</div>
                                     @if (Model.Page < Model.NumberOfPages)
                                     {
                                        <div id="next_page" class="page_next"><a href="@Html.DisplayFor(modelItem => Model.NextPageUrl)"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>
                                     }
                                </div>

                            </div>

                            <!-- Product Grid -->

                            <div class="product-grid">
                                @foreach (var item in Model.Items)
                                {   
                                    <div class="product-item men">
                                        <div class="product discount product_filter">
                                            <div class="product_image">
                                                <img src="https://www.famous-smoke.com/@Html.DisplayFor(modelItem => item.Image)" alt="">
                                            </div>
                                            <div class="favorite favorite_left"></div>
                                            <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$@String.Format("{0:N0}", item.PriceMsrp - item.Price)</span></div>
                                            <div class="product_info">
                                                <h6 class="product_name"><a href="@Html.DisplayFor(modelItem => item.Url)">@Html.DisplayFor(modelItem => item.Name)</a></h6>
                                                <div class="product_price">
                                                    $@Html.DisplayFor(modelItem => item.Price)
                                                    @if (item.PriceMsrp >= item.Price + 1)
                                                    {
                                                        <span>$@Html.DisplayFor(modelItem => item.PriceMsrp)</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="red_button add_to_cart_button"><a href="/cart?id=@Html.DisplayFor(modelItem => item.Id)">add to cart</a></div>
                                    </div>
                                }

                            </div>

                            <!-- Product Sorting -->

                            <div class="product_sorting_container product_sorting_container_bottom clearfix">
                                @*<ul class="product_sorting">
                                    <li>
                                        <span>Show:</span>
                                        <span class="num_sorting_text">04</span>
                                        <i class="fa fa-angle-down"></i>
                                        <ul class="sorting_num">
                                            <li class="num_sorting_btn"><span>01</span></li>
                                            <li class="num_sorting_btn"><span>02</span></li>
                                            <li class="num_sorting_btn"><span>03</span></li>
                                            <li class="num_sorting_btn"><span>04</span></li>
                                        </ul>
                                    </li>
                                </ul>*@
                                <span class="showing_results">Showing @Html.DisplayFor(modelItem => Model.FirstItem)–@Html.DisplayFor(modelItem => Model.LastItem) of @Html.DisplayFor(modelItem => Model.NumberOfItems) results</span>
                                @*<div class="pages d-flex flex-row align-items-center">
                                    <div class="page_current">
                                        <span>@Html.DisplayFor(modelItem => Model.Page)</span>
                                        <ul class="page_selection">
                                            <li><a href="#">1</a></li>
                                            <li><a href="#">2</a></li>
                                            <li><a href="#">3</a></li>
                                        </ul>
                                    </div>
                                    <div class="page_total"><span>of</span>@Html.DisplayFor(modelItem => Model.NumberOfPages)</div>
                                    <div id="next_page_1" class="page_next"><a href="#"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>
                                </div>*@
                                <div class="pages d-flex flex-row align-items-center">
                                    @if(Model.Page > 1)
                                    {
                                        <div id="next_page" class="page_next"><a href="@Html.DisplayFor(modelItem => Model.PrevPageUrl)"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a></div>

                                    }
                                    
                                    <div class="page_current">
                                        <span>@Html.DisplayFor(modelItem => Model.Page)</span>
                                       
                                        <ul class="page_selection">
                                            @if (Model.NextPage != Model.LastPage)
                                            {
                                                <li><a href="@Html.DisplayFor(modelItem => Model.NextPageUrl)">@Html.DisplayFor(modelItem => Model.NextPage)</a></li>
                                                <li><a href="#">...</a></li>
                                            }
                                             
                                            @if(Model.MidPage != Model.NextPage && Model.Page != Model.LastPage && Model.MidPage != Model.Page)
                                            {
                                                <li><a href="@Html.DisplayFor(modelItem => Model.MidPageUrl)">@Html.DisplayFor(modelItem => Model.MidPage)</a></li>
                                                <li><a href="#">...</a></li>
                                            }
                                            <li><a href="@Html.DisplayFor(modelItem => Model.LastPageUrl)">@Html.DisplayFor(modelItem => Model.LastPage)</a></li>
                                            
                                        </ul>
                                    </div>
                                    <div class="page_total"><span>of</span>@Html.DisplayFor(modelItem => Model.NumberOfPages)</div>
                                     @if (Model.Page < Model.NumberOfPages)
                                     {
                                        <div id="next_page" class="page_next"><a href="@Html.DisplayFor(modelItem => Model.NextPageUrl)"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>
                                     }
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Content/plugins/jquery-ui-1.12.1.custom/jquery-ui.js")
@Scripts.Render("~/Scripts/theme/categories_custom.js")